{
	"name": "Aether-V",
	
	// Let Codespaces use its default cached image (fastest possible)
	// This is equivalent to having no devcontainer.json at all
	
	"forwardPorts": [8000],
	
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
				"editor.formatOnSave": true
			},
			"extensions": [
				"ms-python.python",
				"GitHub.copilot"
			]
		}
	},
	
	"postCreateCommand": "pip install -r server/requirements.txt && pip install pytest black flake8",
	
	"remoteEnv": {
		"PYTHONPATH": "${containerWorkspaceFolder}/server"
	}
}
# Aether-V Orchestrator Configuration Example
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=false
APP_VERSION=0.1.0

# Authentication Configuration
# Set to false for development without auth (requires explicit dev mode enable)
AUTH_ENABLED=true

# Explicit safety check for development mode (AUTH_ENABLED=false)
# REQUIRED when AUTH_ENABLED=false to prevent accidental no-auth in production
# Set to true only in development environments
ALLOW_DEV_AUTH=false

# OIDC Configuration (when AUTH_ENABLED=true)
OIDC_ISSUER_URL=https://login.microsoftonline.com/<tenant-id>/v2.0
OIDC_CLIENT_ID=<your-client-id>
OIDC_CLIENT_SECRET=<your-client-secret>
# Role-based access control:
# - Set to "*" to allow any authenticated user (development)
# - Set to specific role name for production (e.g., "vm-admin")
# - Azure AD: roles come from app registrations or group memberships
OIDC_ROLE_NAME=*
OIDC_REDIRECT_URI=https://aetherv.example.com/auth/callback

# Optional API Token for automation (when AUTH_ENABLED=true)
API_TOKEN=<your-api-token>

# Session secret key for session middleware (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET_KEY=<your-secure-session-secret-key>

# Hyper-V Hosts (comma-separated)
HYPERV_HOSTS=hyperv01.example.com,hyperv02.example.com

# WinRM Credentials
WINRM_USERNAME=DOMAIN\\username
WINRM_PASSWORD=your-password
WINRM_TRANSPORT=ntlm
WINRM_PORT=5985

# Inventory Settings
INVENTORY_REFRESH_INTERVAL=60

# Development Settings
# Enable dummy data for development/testing without real Hyper-V hosts
DUMMY_DATA=false

# Host Deployment Settings
# Directory path on Hyper-V hosts where scripts and ISOs will be deployed
# Default: C:\Program Files\Home Lab Virtual Machine Manager
# For testing/development: C:\Program Files\Home Lab Virtual Machine Manager (Test)
# For parallel installations: Use different directory paths for each instance
# Examples:
#   Production: C:\Program Files\Home Lab Virtual Machine Manager
#   Development: C:\Program Files\Home Lab Virtual Machine Manager (Devel)
#   Testing: C:\Program Files\Home Lab Virtual Machine Manager (Test)
#   Custom: C:\CustomPath\HLVMM
HOST_INSTALL_DIRECTORY=C:\Program Files\Home Lab Virtual Machine Manager

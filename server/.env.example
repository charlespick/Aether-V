# Aether-V Orchestrator Configuration Example
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=false
APP_VERSION=0.1.0

# OIDC Authentication (set to false for development without auth)
OIDC_ENABLED=true
OIDC_ISSUER_URL=https://login.microsoftonline.com/<tenant-id>/v2.0
OIDC_CLIENT_ID=<your-client-id>
OIDC_CLIENT_SECRET=<your-client-secret>
OIDC_ROLE_NAME=vm-admin
OIDC_REDIRECT_URI=https://aetherv.example.com/oidc/callback

# Optional API Token for automation (when OIDC is enabled)
API_TOKEN=<your-api-token>

# Hyper-V Hosts (comma-separated)
HYPERV_HOSTS=hyperv01.example.com,hyperv02.example.com

# WinRM Credentials
WINRM_USERNAME=DOMAIN\\username
WINRM_PASSWORD=your-password
WINRM_TRANSPORT=ntlm
WINRM_PORT=5985

# Inventory Settings
INVENTORY_REFRESH_INTERVAL=60
